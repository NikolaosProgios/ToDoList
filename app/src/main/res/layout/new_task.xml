<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/task_dialog_bg"
    android:padding="@dimen/padding_large">

    <EditText
        android:id="@+id/new_task_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/add_note"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/add_task_text"
        android:textColorHint="@color/add_task_text" />

    <Button
        android:id="@+id/new_task_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_task_et"
        android:layout_alignParentEnd="true"
        android:background="@color/transparent"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/pre_save_task"
        android:textSize="@dimen/text_small" />
</RelativeLayout>